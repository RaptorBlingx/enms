      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "TimescaleDB"
          },
          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "WITH baseline AS (\n  SELECT \n    DATE_TRUNC('month', er.bucket) as month,\n    SUM(er.total_energy_kwh * cf.emission_factor_kg_co2_per_kwh) as co2\n  FROM energy_readings_1day er\n  CROSS JOIN carbon_factors cf\n  WHERE er.bucket >= NOW() - INTERVAL '7 months'\n    AND er.bucket < NOW() - INTERVAL '6 months'\n    AND cf.region = 'default'\n    AND cf.is_active = true\n  GROUP BY DATE_TRUNC('month', er.bucket)\n)\nSELECT \n  TO_CHAR(DATE_TRUNC('month', er.bucket), 'Mon YYYY') as \"Month\",\n  ROUND(SUM(er.total_energy_kwh * cf.emission_factor_kg_co2_per_kwh)::numeric, 0) as \"Actual\",\n  ROUND((SELECT co2 * 0.95 FROM baseline)::numeric, 0) as \"Target (-5%)\"\nFROM energy_readings_1day er\nCROSS JOIN carbon_factors cf\nWHERE er.bucket >= NOW() - INTERVAL '6 months'\n  AND cf.region = 'default'\n  AND cf.is_active = true\nGROUP BY DATE_TRUNC('month', er.bucket)\nORDER BY DATE_TRUNC('month', er.bucket);",
          "refId": "A"
        }
      ],
